generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model books {
  id             String   @id @default(cuid())
  title          String(255) @db.VarChar(255) NOT NULL
  author         String(100) @db.VarChar(100) NOT NULL
  publisher      String(100)?
  publication_date  DateTime?
  isbn           String(20)?
  genre          String(50)?
  description    String?
  cover_image    Bytes?
  pages          Int?
  language       String(50)?
  edition        String(50)?
  price          Decimal(10, 2)?
  stock_quantity Int?
  status         String(20)?
}